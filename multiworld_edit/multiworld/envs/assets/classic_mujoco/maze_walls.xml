<mujoco>
    <body name="walls" pos="0 0 0">
        <!-- size = walls pos / 2-->
        <body name="innerwall" pos="0 0 0">
            <geom type="box" pos="0 0 0" size="1.5 1.5 1"
                  rgba=".12 .4 .9 0.5"
                  contype="3" conaffinity="3" />
        </body>
        <body name="outerwall" pos="0 0 0">
            <!-- pos = 1 + 3*(inner wall size) -->
            <!-- size = 3*(inner wall size) -->
            <geom type="box" pos="0 5.5 0" size="6.5 1 1"
                  rgba=".12 .4 .9 0.5"
                  contype="2" conaffinity="3" />
            <geom type="box" pos="0 -5.5 0" size="6.5 1 1"
                  rgba=".12 .4 .9 0.5"
                  contype="2" conaffinity="3" />
            <!-- pos = 1 + 3*(inner wall size) -->
            <!-- size = 2 + 3*(inner wall size) -->
            <geom type="box" pos="5.5 0 0" size="1 6.5 1"
                  rgba=".12 .4 .9 0.5"
                  contype="2" conaffinity="3" />
            <geom type="box" pos="-5.5 0 0" size="1 6.5 1"
                  rgba=".12 .4 .9 0.5"
                  contype="2" conaffinity="3" />
        </body>
    </body>
